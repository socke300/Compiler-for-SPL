type arraytype=array[4]of int;
proc main(){
    var array1:arraytype;
    array1[0]:=3;
    array1[1]:=2;
    array1[2]:=4;
    array1[3]:=1;
    sort(array1);

    printc('\n');
    summe(2,5);
    printc('\n');
    printArray(array1);
    printc('\n');
    fak(5);
    printc('\n');
    printc('\n');
}

proc summe(zahl: int, zahl2: int){
    printi(zahl + zahl2);
}

proc fak(zahl: int){
    var result : int;
    result := 1;
    while (zahl>1){
        result := result * zahl;
        zahl := zahl - 1;
    }
    printi(result);
}

proc printArray(ref array1:arraytype){
    var zaehler: int;
    zaehler:= 0;
    while(zaehler < 4){
        printi(array1[zaehler]);
        printc(' ');
        zaehler:= zaehler + 1;
    }
}

proc sort(ref array1:arraytype){
    var zaehler:int;
    var zaehler2:int;
    var merke:int;
    zaehler:=0;
    zaehler2:=0;
    while(zaehler < 3){
        if(array1[zaehler] > array1[zaehler+1]){
            merke:=array1[zaehler+1];
            array1[zaehler+1]:=array1[zaehler];
            array1[zaehler]:=merke;
            zaehler2 := zaehler2 + 1;
        }
        zaehler:= zaehler+1;
        if(zaehler = 3){
            if(zaehler2>0){
                zaehler:=0;
                zaehler2:=0;
            }
        }
    }
}